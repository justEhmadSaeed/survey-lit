{
	"extends": [
		"eslint:recommended",
		"plugin:import/errors",
		"plugin:react/recommended",
		"plugin:jsx-a11y/recommended"
	],
	"plugins": [
		"react",
		"import",
		"jsx-a11y"
	],
	"rules": {
		"react/prop-types": 1,
		"indent": "off",
		"linebreak-style": [
			"warn",
			"windows"
		],
		"quotes": [
			"warn",
			"single"
		],
		"no-unused-vars": "warn"
	},
	"parserOptions": {
		"ecmaVersion": 2021,
		"sourceType": "module",
		"ecmaFeatures": {
			"jsx": true
		}
	},
	"env": {
		"es6": true,
		"browser": true,
		"node": true
	},
	"settings": {
		"react": {
			"version": "detect"
		},
		"import/resolver": {
			"node": {
				"paths": [
					"src"
				]
			}
		}
	}
}